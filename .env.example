# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard/
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=https://localhost/api/auth/spotify/callback

# JWT Security Configuration
# Generate a strong secret key for production
JWT_SECRET_KEY=your-super-secure-secret-key-never-use-this-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/emotionbeats

# Redis Configuration for Socket.io and Caching
REDIS_URL=redis://redis:6379/0
SOCKETIO_REDIS_URL=redis://redis:6379/1

# Socket.io Configuration - Updated for Python 3.13 compatibility
# Use ["*"] for development, specific origins for production
SOCKETIO_CORS_ORIGINS=["*"]
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25
SOCKETIO_RATE_LIMIT_ENABLED=true
SOCKETIO_RATE_LIMIT_REQUESTS=100
SOCKETIO_RATE_LIMIT_WINDOW=60

# Python Environment Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Environment
ENVIRONMENT=development
TESTING=False

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration
# Generate a separate CSRF secret for production
CSRF_SECRET_KEY=your-csrf-secret-key-different-from-jwt